<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
     http://www.springframework.org/schema/context
     http://www.springframework.org/schema/context/spring-context-4.0.xsd
     http://www.springframework.org/schema/aop
     http://www.springframework.org/schema/aop/spring-aop.xsd">

    <!-- 使用annotation 自动注册bean -->
    <context:component-scan base-package="com.zhlh.zeus" use-default-filters="false">
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Service"/>
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Component" />
    </context:component-scan>

    <aop:aspectj-autoproxy/>

    <context:property-placeholder location="classpath:service-config.properties"/>

    <!-- 面向服务架构开发的配置参数 -->
    <bean class="cn.remex.soa.SoaConfig">
        <!-- 本机服务模式 bus(总线模式)/provider(服务供应模式)/isolation(孤立模式)/client(纯客户端模式，默认值) -->
        <property name="mode" value="bus"></property>
        <property name="type" value="hessian"></property>
        <property name="busServer">
            <map>
                <entry key="type" value="hessian"></entry>
                <entry key="hessianUrl"
                       value="${hessianUrl}"></entry>
            </map>
        </property>
    </bean>

    <!-- 随程序自动启动 -->
    <bean class="com.zhlh.zeus.util.InitUtil" init-method="initResource"></bean>

</beans>